<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="voguish_action" model="ir.actions.act_window">
        <field name="name">Rent Outfits</field>
        <field name="res_model">voguish</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="voguish_design_action" model="ir.actions.act_window">
        <field name="name">Design Outfits</field>
        <field name="res_model">voguish.design</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="voguish_categories_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">voguish.categories</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="voguish_sizes_action" model="ir.actions.act_window">
        <field name="name">Product Sizes</field>
        <field name="res_model">voguish.size</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="voguish_tags_action" model="ir.actions.act_window">
        <field name="name">Product Tags</field>
        <field name="res_model">voguish.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="voguish_view_list" model="ir.ui.view">
        <field name="name">voguish.view.tree</field>
        <field name="model">voguish</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" string="Outfit Name"/>
                <field name="brand"/>
                <field name="rent_per_hour"/>
                <field name="availability_status"/>
                <field name="category_id"/>
                <field name="size_ids"/>
            </tree>
        </field>
    </record>

    <record id="voguish_view_form" model="ir.ui.view">
        <field name="name">voguish.view.form</field>
        <field name="model">voguish</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <div>
                        <field name="image" nolabel='1' widget="image" style="margin-right:15px;" class="oe_avatar"/>
                        <label for="name" string="Outfit Name"/>
                        <h1><field name="name" placeholder="New Dress"/></h1>
                    </div><br/><br/>    
                    <group col='2'>   
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="availability_status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General Information">
                            <group col='2'>
                                <group>
                                    <field name="description"/>
                                    <field name="brand"/>
                                    <field name="category_id"/>
                                </group>
                                <group>
                                    <field name="size_ids" widget="many2many_checkboxes"/>
                                    <field name="date_availability" string="Available Till"/>
                                </group>
                                <group>
                                    <field name="deposit_price"/>
                                    <field name="rent_per_hour"/>
                                </group>
                            </group>
                        </page>
                        <page string="Alterations">
                            <group col='2' string='Measurements (inches)'>
                                <group>
                                    <field name="neck"/>
                                    <field name="neck_to_knee"/>
                                    <field name="bust"/>
                                    <field name="hips"/>
                                    <field name="inseam"/>
                                </group>
                                <group>
                                    <field name="arm_length"/>
                                    <field name="arm_hole"/>
                                    <field name="wrist"/>
                                    <field name="waist"/>
                                    <field name="shoulder_to_waist"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="voguish_view_search" model="ir.ui.view">
        <field name="name">voguish.view.search</field>
        <field name="model">voguish</field>
        <field name="arch" type="xml">
            <search string="Channel">
                <field name="name"/>
                <field name="brand"/>
                <field name="availability_status"/>
                <field name="rent_per_hour" string="Rent"/>
                <filter string="Available" name="availability_status" domain="[('availability_status', '=', 'True')]"/>
                <group string="Group By">
                    <filter string="Category" name="category_id" context="{'group_by':'category_id'}"/>
                    <filter string="Size" name="size_ids" context="{'group_by':'size_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="voguish_design_view_list" model="ir.ui.view">
        <field name="name">voguish.design.view.tree</field>
        <field name="model">voguish.design</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" string="Outfit Name"/>
                <field name="category_id"/>
                <field name="size"/>
            </tree>
        </field>
    </record>

    <record id="voguish_design_view_form" model="ir.ui.view">
        <field name="name">voguish.design.view.form</field>
        <field name="model">voguish.design</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <label for="name" string="Outfit Name"/>
                    <label for="image" string="Reference Image" position="attributes" class="oe_right oe_highlight"/><br/>       
                    <field name="image" widget="image" style="margin-right:18px;" class="oe_avatar"/>    
                    <h1><field name="name" placeholder="New Dress"/></h1>   
                    <notebook>
                        <page string="Product Details">
                            <group>
                                <field name="description"/>
                                <field name="category_id"/>
                                <field name="size" widget="radio"/>  
                            </group>
                        </page>
                    </notebook>          
                </sheet>
            </form>
        </field>
    </record>


    <record id="voguish_categories_view_list" model="ir.ui.view">
        <field name="name">voguish.categories.view.tree</field>
        <field name="model">voguish.categories</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="voguish_categories_view_form" model="ir.ui.view">
        <field name="name">voguish.categories.view.form</field>
        <field name="model">voguish.categories</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <h1><field name="name"/></h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="voguish_categories_view_search" model="ir.ui.view">
        <field name="name">voguish.categories.view.search</field>
        <field name="model">voguish.categories</field>
        <field name="arch" type="xml">
            <search string="Channel">
