            </search>
        </field>
    </record>

    <record id="voguish_size_view_list" model="ir.ui.view">
        <field name="name">voguish.size.view.tree</field>
        <field name="model">voguish.size</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="voguish_size_view_form" model="ir.ui.view">
        <field name="name">voguish.size.view.form</field>
        <field name="model">voguish.size</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <h1><field name="name"/></h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="voguish_size_view_search" model="ir.ui.view">
        <field name="name">voguish.size.view.search</field>
        <field name="model">voguish.size</field>
        <field name="arch" type="xml">
            <search string="Channel">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="voguish_tag_view_list" model="ir.ui.view">
        <field name="name">voguish.tag.view.tree</field>
        <field name="model">voguish.tag</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="voguish_tag_view_form" model="ir.ui.view">
        <field name="name">voguish.tag.view.form</field>
        <field name="model">voguish.tag</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <h1><field name="name"/></h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="voguish_tag_view_search" model="ir.ui.view">
        <field name="name">voguish.tag.view.search</field>
        <field name="model">voguish.tag</field>
        <field name="arch" type="xml">
            <search string="Channel">
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>



    

    
